{
  "name": "vue-json-form",
  "private": true,
  "workspaces": [
    "demo",
    "vue-json-form",
    "webcomponent",
    "schemas",
    "ajv-validator"
  ],
  "packageManager": "yarn@4.12.0",
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@size-limit/file": "^11.2.0",
    "@size-limit/preset-big-lib": "^11.2.0",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^25.0.1",
    "semantic-release-monorepo": "^8.0.2",
    "semantic-release-yarn": "^3.0.2",
    "size-limit": "^11.2.0",
    "syncpack": "^14.0.0-alpha.23",
    "turbo": "^2.6.2",
    "typedoc": "^0.28.14"
  },
  "scripts": {
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "doc": "yarn run build:schemas && run-p -l \"doc:**\"",
    "doc:ui": "rm -rf ./docs/ui-schema && mkdir -p ./docs/ui-schema && generate-schema-doc ./schemas/src/generated/ui-merged.schema.json ./docs/ui-schema/index.html",
    "doc:demo": "yarn run build:demo && rm -rf ./docs/demo && cp -r ./demo/dist ./docs/demo",
    "doc:ui-schema-files": "rm -rf ./docs/schemas && cp -r ./schemas/src/ui ./docs/schemas",
    "pre-commit": "yarn run doc && yarn workspaces foreach run pre-commit",
    "build": "turbo check-types build",
    "build:demo": "turbo run check-types build --filter demo",
    "build:vue-json-form": "turbo run check-types build --filter @educorvi/vue-json-form",
    "build:webcomponent": "turbo run check-types build --filter @educorvi/vue-json-form-webcomponent",
    "build:schemas": "turbo run check-types build --filter @educorvi/vue-json-form-schemas",
    "release": "yarn workspaces foreach --topological-dev -Av --exclude . run semantic-release -e semantic-release-monorepo",
    "release:dry-run": "yarn workspaces foreach --topological-dev -Av --exclude . run semantic-release --dry-run -e semantic-release-monorepo",
    "setOldVersions": "yarn workspaces foreach -Apv --exclude . exec ../.github/findAndSetOldVersion.sh",
    "size": "size-limit"
  }
}
