{
  "name": "@educorvi/vue-json-form",
  "version": "3.0.0",
  "private": true,
  "files": [
    "dist"
  ],
  "types": "dist/vue-json-form.d.ts",
  "scripts": {
    "dev": "vite -c dev_app.vite.config.ts --host",
    "build": "yarn run compile-ui-schema && run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "pre-commit": "echo ''",
    "lint": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore --exit-on-fatal-error",
    "format": "prettier --write src/",
    "generateTypings": "run-p 'generateTypings:*'",
    "generateTypings:jsonSchema": "json2ts -i src/schemas/json-schema_draft7.json -o src/typings/json-schema.d.ts",
    "generateTypings:uiSchema": "cd src/schemas/ui/ && json2ts -i ui.schema.json -o ../../typings/ui-schema.d.ts",
    "prepare": "husky",
    "compile-ui-schema": "node compileSchema.js"
  },
  "exports": {
    ".": {
      "import": "./dist/vue-json-form.js",
      "require": "./dist/vue-json-form.umd.js"
    }
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^11.6.1",
    "@educorvi/rita": "^5.0.1",
    "@vueuse/core": "^10.9.0",
    "ajv": "^8.12.0",
    "bootstrap": "^5.3.3",
    "bootstrap-vue-next": "^0.16.6",
    "deepmerge": "^4.3.1",
    "json-pointer": "^0.6.2",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vuedraggable": "next"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node18": "^18.2.0",
    "@types/jsdom": "^21.1.1",
    "@types/json-pointer": "^1.0.34",
    "@types/node": "^18.17.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.21.1",
    "jsdom": "^22.1.0",
    "json-schema-to-typescript": "^13.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "typescript": "~5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.7.2",
    "vitest": "^0.34.2",
    "vue-tsc": "^2.0.17"
  }
}
