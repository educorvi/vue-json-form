{
  "name": "@educorvi/vue-json-form",
  "author": {
    "email": "julian.pollinger@educorvi.de",
    "name": "Julian Pollinger"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/educorvi/vue-json-form",
    "directory": "vue-json-form"
  },
  "files": [
    "dist",
    "src/exampleSchemas",
    "package.json"
  ],
  "main": "dist/vue-json-form.umd.cjs",
  "module": "dist/vue-json-form.js",
  "types": "dist/vue-json-form.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/vue-json-form.d.ts",
      "import": "./dist/vue-json-form.js",
      "default": "./dist/vue-json-form.js"
    },
    "./dist/*": "./dist/*",
    "./src/exampleSchemas/*": "./src/exampleSchemas/*"
  },
  "scripts": {
    "prepack": "yarn workspace vue-json-form run build:vue-json-form",
    "release:alpha": "yarn npm publish --access public --tag alpha",
    "dev": "vite -c vite.dev.config.ts --host",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test": "run-p 'test:**'",
    "test:unit": "vitest --run",
    "test:e2e": "cypress run",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "pre-commit": "echo ''",
    "lint": "eslint src --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore --exit-on-fatal-error",
    "format": "prettier --write src/",
    "prepare": "husky",
    "cypress": "cypress open"
  },
  "dependencies": {
    "@educorvi/rita": "^5.4.3",
    "@educorvi/vue-json-form-schemas": "workspace:*",
    "@vueuse/core": "^10.9.0",
    "bootstrap": "^5.3.3",
    "bootstrap-vue-next": "0.28.5",
    "buffer": "^6.0.3",
    "deepmerge": "^4.3.1",
    "json-pointer": "^0.6.2",
    "pinia": "^2.1.6",
    "sanitize-html": "^2.17.0",
    "uuid": "^10.0.0",
    "vue": "^3.5.20",
    "vuedraggable": "^4.1.0"
  },
  "devDependencies": {
    "@educorvi/vue-json-form-ajv-validator": "workspace:^",
    "@rushstack/eslint-patch": "^1.3.2",
    "@semantic-release/exec": "^7.1.0",
    "@tsconfig/node18": "^18.2.0",
    "@types/jsdom": "^21.1.1",
    "@types/json-pointer": "^1.0.34",
    "@types/node": "^24.0.14",
    "@types/sanitize-html": "^2.16.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "axe-core": "^4.10.2",
    "cypress": "^14.2.1",
    "cypress-axe": "^1.6.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.4.0",
    "jsdom": "^22.1.0",
    "lightningcss": "^1.30.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "sass": "^1.77.4",
    "semantic-release": "^24.2.3",
    "semantic-release-monorepo": "^8.0.2",
    "semantic-release-yarn": "^3.0.2",
    "terser": "^5.43.1",
    "typescript": "~5.8.2",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-vue-devtools": "^8.0.1",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.0.6"
  }
}
